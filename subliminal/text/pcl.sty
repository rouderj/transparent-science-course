%Equation-Sequence Environment
%Uses both Numbers and Letters in Equation numbers 2a, 2b, 2c, etc.
% Example:
%   \begin{eqs}
%   a & = &b\\ \next
%   b & = &c
%   \end{eqnseq}

\newcounter{eqnalph}
\renewcommand{\theequation}{\arabic{equation}\alph{eqnalph}}

\newenvironment{eqs}{\begin{eqnarray} \stepcounter{eqnalph}}{\end{eqnarray}
  \setcounter{eqnalph}{0}\ignorespacesafterend}
\newcommand{\next}{\addtocounter{equation}{-1} \stepcounter{eqnalph}}

%Equation environments
\newenvironment{eq}{\begin{equation}}{\end{equation} \ignorespacesafterend}
\newenvironment{eqa}{\begin{eqnarray}}{\end{eqnarray}\ignorespacesafterend}
